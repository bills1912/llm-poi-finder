# HeyPico Maps LLM - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ===========================================
# Application Settings
# ===========================================
APP_NAME="HeyPico Maps LLM"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# ===========================================
# Server Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# Google Maps API Configuration
# ===========================================
# Backend API Key (for server-side requests)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable: Places API, Directions API, Geocoding API
GOOGLE_MAPS_API_KEY=your_backend_api_key_here

# Frontend API Key (optional, for client-side maps)
# Should be restricted to HTTP referrers
# If not set, backend key will be used (not recommended for production)
GOOGLE_MAPS_FRONTEND_KEY=your_frontend_api_key_here

# ===========================================
# Rate Limiting
# ===========================================
# Maximum requests per time window per user
RATE_LIMIT_REQUESTS=100
# Time window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW=3600
# Daily API quota limit per user
DAILY_QUOTA_LIMIT=1000

# ===========================================
# LLM Configuration (Ollama)
# ===========================================
# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434
# Model to use (llama3.2, mistral, phi3, etc.)
LLM_MODEL=llama3.2
# Temperature for response generation (0.0-1.0)
LLM_TEMPERATURE=0.7
# Maximum tokens in response
LLM_MAX_TOKENS=1024

# ===========================================
# Search Settings
# ===========================================
# Default search radius in meters
DEFAULT_SEARCH_RADIUS=5000
# Maximum search results to return
MAX_SEARCH_RESULTS=10
# Default location (lat,lng) - Yogyakarta, Indonesia
DEFAULT_LOCATION=-7.7713,110.3774

# ===========================================
# Cache Settings
# ===========================================
CACHE_TTL=3600
ENABLE_CACHE=true
